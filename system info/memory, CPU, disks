#!/bin/bash
# Simple script to check memory, CPU, disk usage, and uptime

echo "-----------------------------------------"
echo "üñ•Ô∏è  System Information"
echo "-----------------------------------------"

echo
echo "‚úÖ Step 1: Hostname and OS"
hostname
lsb_release -d

echo
echo "‚úÖ Step 2: CPU Information"
lscpu | grep -E "Model name|Architecture|CPU\(s\)"

echo
echo "‚úÖ Step 3: Memory Usage"
free -h

echo
echo "‚úÖ Step 4: Disk Usage"
df -h | grep -E '^/dev/'

echo
echo "‚úÖ Step 5: System Uptime"
uptime -p

echo
echo "‚úÖ Optional: Top 5 Processes by CPU and Memory"
ps -eo pid,ppid,cmd,%mem,%cpu --sort=-%cpu | head -n 6

echo
echo "üéâ System check complete!"
